{
  "name": "frourio-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "run-p build:client build:server",
    "build:client": "aspida && prisma generate --schema server/prisma/schema.prisma && next build && next export",
    "build:server": "npm run build --prefix server",
    "build:types": "aspida && npm run build:frourio --prefix server",
    "dev": "npm run migrate:dev && run-p dev:*",
    "dev:aspida": "aspida --watch",
    "dev:client": "next dev -p 3001",
    "dev:server": "npm run dev --prefix server",
    "lint": "eslint --ext .ts,.js,.tsx .",
    "lint:fix": "npm run lint -- --fix",
    "migrate:dev": "npm run migrate:dev --prefix server",
    "migrate:reset": "npm run migrate:reset --prefix server",
    "pm2:delete": "pm2 delete pm2.config.json",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:start": "pm2 start pm2.config.json --env production",
    "pm2:stop": "pm2 stop pm2.config.json",
    "start": "run-p start:*",
    "start:client": "next start",
    "start:server": "npm start --prefix server",
    "test": "npm run build:types && jest",
    "typecheck": "npm run build:types && tsc --noEmit && tsc --noEmit -p server"
  },
  "dependencies": {
    "@aspida/fetch": "^1.1.1",
    "@aspida/node-fetch": "^1.1.1",
    "@aspida/swr": "^1.1.1",
    "@prisma/cli": "^2.13.1",
    "class-validator": "^0.12.2",
    "pm2": "^4.5.1",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "fastify": "^3.9.2",
    "fastify-cors": "^5.1.0",
    "next": "^10.0.4",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "swr": "^0.3.11",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.12"
  }
}
